// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "assistant": {
    "version": "2",
    "default_open_ai_model": null,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    }
  },
  "theme": "Xcode Classic Dark",
  "base_keymap": "VSCode",
  "buffer_font_family": "SpaceMono Nerd Font Mono",
  // "buffer_font_family": "Maple Mono",
  "buffer_font_size": 20,
  "vim_mode": true,
  "relative_line_numbers": true,
  "cursor_blink": false,
  "format_on_save": "on",
  "ui_font_size": 20,
  "ui_font_family": "Lilex Nerd Font Mono",
  "gutter": {
    "line_numbers": true,
    "folds": false,
    "code_actions": false,
    "runnables": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },

  "terminal": {
    "font_family": "SpaceMono Nerd Font Mono",
    // "buffer_font_family": "Maple Mono",
    "font_size": 20
  },
  "inlay_hints": {
    "enabled": true
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  // Move all panel to the right
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": true,
        "staticcheck": true,
        "codelenses": {
          "gc_details": true,
          "generate": true,
          "regenerate_cgo": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "analysis": {
          "completeUnimported": true,
          "staticcheck": true,
          "unusedParams": true,
          "unusedWrite": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  }
}
